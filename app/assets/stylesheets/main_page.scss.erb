.problem_content, .ved_solvation_content {
  width: $frame_width;
  height: 250px;
  margin: 0 auto;
  position: relative;
  //margin-bottom: 1.5em;
  p {
    margin: 0;
    padding: 0;
  }
  .span0, .span30, .span60, .span90, .span120, .span150, .span180 {
    @include italic;
    text-align: center;
    width: 35%;
    position: absolute;
  }
  .arrow {
    position: absolute;
  }
  .span0, .span180 {
    top: 15%;
  }
  .span30, .span150 {
    top: 60%;
  }
  .span60, .span120 {
    top: 70%;
    .arrow {
      top: -20px;
    }
  }
  .span0 {
    right: 70%;
    .arrow {
      right: -50px;
    }
  }
  .span180 {
    left: 70%;
    .arrow {
      left: -50px;
      @include rotate(180deg);
    }
  }
  .span30 {
    right: 67%;
    .arrow {
      right: -35px;
      @include rotate(-30deg);
    }
  }
  .span150 {
    left: 67%;
    .arrow {
      left: -35px;
      @include rotate(-150deg);
    }
  }
  .span60 {
    right: 60%;
    .arrow {
      right: -35px;
      @include rotate(-60deg);
    }
  }
  .span120 {
    left: 60%;
    .arrow {
      left: -35px;
      @include rotate(-120deg);
    }
  }
  .span90 {
    bottom: -1.0em;
    left: 50%;
    margin-left: -17.5%;
    .arrow {
      margin-top: -75px;
      left: 40%;
      @include rotate(-90deg);
    }
  }
}
.ved_request_frame .span90 .arrow {
  margin-top: -50px;
}
.ved_request_frame.abroad .span90  {
  bottom: -50px;
  .arrow {
    
  }
}
.buy_button_frame .problem_content .span90 {
  bottom: 0;
  .arrow {
    margin-top: -50px;
  }
}
.buy_button_frame .ved_solvation_content .span90{
  bottom: 1.5em !important;
  .arrow {
    margin-top: -55px;
  }
}
.ved_request_frame .ved_solvation_content .span90 {
   bottom: 1em !important;
  .arrow {
    margin-top: -40px;
  }
}
.best_offer_frame .ved_solvation_content .span90 {
   bottom: 2.5em !important;
  .arrow {
    margin-top: -50px;
  }
}
.ved_solvation_content {
  .span30, .span150 {
    top: 50%;
  }
  .span30  .arrow {
    right: -50px;
  }
  .span150 .arrow {

background: linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,0.75) 23%,rgba(255,255,255,0.9) 49%,rgba(255,255,255,0.75) 76%,rgba(255,255,255,0) 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00ffffff', endColorstr='#00ffffff',GradientType=1 ); /* IE6-9 */
  }
}

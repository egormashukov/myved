$width: 1200px;
$border_color: #568ECC;
$red: #A81414;
$problem_title: #256194;
$frame_width: 65%;
$dark_title: #185D98;

@mixin regular {
  font-family: "Trebuchet MS" !important;
}
@mixin bold {
  font-weight: normal;
  font-family: "Trebuchet MS Bold" !important;
}
@mixin italic {
  font-family: "Trebuchet MS Italic" !important;
}
@mixin rotate($angle) {
  transform: rotate($angle);
  -moz-transform: rotate($angle); /* Для Firefox */
  -ms-transform: rotate($angle); /* Для IE */
  -webkit-transform: rotate($angle); /* Для Safari, Chrome, iOS */
  -o-transform: rotate($angle);
}

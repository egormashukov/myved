@mixin button_gradient {
  background: #0582b8; /* Old browsers */
  background: -moz-linear-gradient(top, #0582b8 0%, #055382 48%, #055382 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#0582b8), color-stop(48%,#055382), color-stop(100%,#055382)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #0582b8 0%,#055382 48%,#055382 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #0582b8 0%,#055382 48%,#055382 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #0582b8 0%,#055382 48%,#055382 100%); /* IE10+ */
  background: linear-gradient(to bottom, #0582b8 0%,#055382 48%,#055382 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#0582b8', endColorstr='#055382',GradientType=0 ); /* IE6-9 */
}
@mixin rotate($angle) {
  -moz-transform: rotate($angle);
  -ms-transform: rotate($angle);
  -webkit-transform: rotate($angle);
  -o-transform: rotate($angle);
  transform: rotate($angle);
}

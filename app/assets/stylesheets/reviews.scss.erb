$blue_color: #3179AE;
$border_color:#999;

.reviews {
  border-top: 1px dashed $border_color;
  .send_message {
    font-size: 0.9em;
    margin: 1em 0;
  }
  .fa-info-circle {
    color: #006EBC;
    padding-left: 5px;
  }
  form textarea {
    margin-bottom: 1.0em;
    width: 100%;
    font-size: 0.9em;
    border: 1px solid $blue_color !important;
    background: #FEFEFE;
  }
  form input[type='submit'] {
    width: 100%;
  }
}
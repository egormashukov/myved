- content_for :page_header do
  %p= link_to t('back'), admin_payments_path, :class => "bright_link"
  %h1
    - if @payment.new_record?
      = action_accusative("payments", "add")
    - else
      = action_accusative("payments", "edit")

= form_for [:admin, @payment] do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{t 'save_errors'}: #{@payment.errors.count}"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg
  %table

    %tr
      %th= f.label :invoice_numb
      %td= f.text_field :invoice_numb    
  

    %tr
      %td{colspan: 2}
        = f.label :purpose
        %br
        = f.text_area :purpose
  

    %tr
      %th= f.label :sum
      %td= f.text_field :sum    
  

    %tr
      %th= f.label :invoice_on
      %td= f.date_select :invoice_on    
  

    %tr
      %th= f.label :paid_on
      %td= f.date_select :paid_on    
  

    %tr
      %th= f.label :invoice
      %td= f.text_field :invoice    
  

    %tr
      %th= f.label :state
      %td= f.text_field :state    
  

    %tr
      %td{colspan: 2}
        = f.label :comment
        %br
        = f.text_area :comment
  

    %tr
      %th= f.label :paidable_type
      %td= f.text_field :paidable_type    
  

    %tr
      %th= f.label :type
      %td= f.text_field :type    
  
  .actions
    = f.submit t('save')
= content_for :centered do
  %h2= t(:forgot_password)

  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, builder: MainFormBuilder) do |f|
    = f.error_messages
    = f.email_field_inline :email, :autofocus => true

    = f.submit t(:send_reset_pass_instuctions), class: 'main_button most_wide_button'

  -#= render "devise/shared/links"
